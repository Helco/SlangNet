--config
compatible-codegen
generate-file-scoped-namespaces
generate-doc-includes
generate-helper-types
generate-macro-bindings
generate-aggressive-inlining
exclude-funcs-with-body
explicit-vtbls
multi-file
log-potential-typedef-remappings

# Prevent platform-specific macros
--define-macro
SLANG_COMPILER
SLANG_PLATFORM
SLANG_WIN64
# enable StdCall convention for virtual methods,
# this does not affect non-Windows platforms, but is required there

# Remove the rest of the platform-specific macros
--exclude
SLANG_ENABLE_DIRECTX
SLANG_ENABLE_DXGI_DEBUG
SLANG_ENABLE_DXBC_SUPPORT
SLANG_ENABLE_PIX
SLANG_ENABLE_DXVK
SLANG_ENABLE_VKD3D
SLANG_HAS_EXCEPTIONS
SLANG_HAS_ENUM_CLASS
SLANG_HAS_MOVE_SEMANTICS
SLANG_PROCESSOR_X86_64
SLANG_PROCESSOR_ARM
SLANG_PROCESSOR_ARM_64
SLANG_PROCESSOR_x86
SLANG_PROCESSOR_POWER_PC
SLANG_PROCESSOR_POWER_PC_64
SLANG_PROCESSOR_FAMILY_X86
SLANG_PROCESSOR_FAMILY_ARM
SLANG_PROCESSOR_FAMILY_POWER_PC
SLANG_PTR_IS_64
SLANG_PTR_IS_32
SLANG_LITTLE_ENDIAN
SLANG_BIG_ENDIAN
SLANG_UNALIGNED_ACCESS

# Remove the UUIDs, they are generated incorrectly
--exclude
SLANG_UUID_ISlangUnknown
SLANG_UUID_ISlangBlob
SLANG_UUID_ISlangFileSystem
SLANG_UUID_ISlangSharedLibrary
SLANG_UUID_ISlangSharedLibrary_Dep1
SLANG_UUID_ISlangSharedLibraryLoader
SLANG_UUID_ISlangFileSystemExt
SLANG_UUID_ISlangMutableFileSystem
SLANG_UUID_ISlangWriter

# Remove the function prefixes, also fix over-removing of prefixes
--prefixStrip
sp
--remap
specialize=spspecialize
specializeType=spspecializeType

# This fixes a ClangSharp issue with TypeReflection::Kind causing compile errors
--with-type
Kind=uint

# For the pretty bindings we generate everything but the enums and some PODs
--namespace
SlangNet.Unsafe
--with-namespace
BindingType=SlangNet # enums with duplicated declarations
SlangBindingType=SlangNet
ContainerType=SlangNet
SlangContainerFormat=SlangNet
LayoutRules=SlangNet
SlangLayoutRules=SlangNet
ParameterCategory=SlangNet
SlangParameterCategory=SlangNet
PathKind=SlangNet
SlangPathType=SlangNet

OSPathKind=SlangNet
SlangArchiveType=SlangNet
SlangBindableResourceType=SlangNet
SlangCapabilityID=SlangNet
SlangCompileTarget=SlangNet
SlangDebugInfoFormat=SlangNet
SlangDebugInfoLevel=SlangNet
SlangFloatingPointMode=SlangNet
SlangLineDirectiveMode=SlangNet
SlangMatrixLayoutMode=SlangNet
SlangModifierID=SlangNet
SlangOptimizationLevel=SlangNet
SlangPassThrough=SlangNet
SlangProfileID=SlangNet
SlangResourceAccess=SlangNet
SlangResourceShape=SlangNet
SlangScalarType=SlangNet
SlangSeverity=SlangNet
SlangSourceLanguage=SlangNet
SlangStage=SlangNet
SlangTypeKind=SlangNet
SlangWriterChannel=SlangNet
SlangWriterMode=SlangNet

--methodClassName
Slang
--libraryPath
slang
--file
../slang/slang.h

# Silence ClangSharp warnings
--exclude
SLANG_OFFSET_OF
SLANG_BREAKPOINT
SLANG_ALIGN_OF
SLANG_INT64
SLANG_UINT64
SLANG_COMPILE_TIME_ASSERT
SLANG_COUNT_OF
SLANG_STRINGIZE_HELPER
SLANG_STRINGIZE
SLANG_CONCAT_HELPER
SLANG_CONCAT
SLANG_UNUSED
SLANG_FAILED
SLANG_SUCCEEDED
SLANG_GET_RESULT_FACILITY
SLANG_GET_RESULT_CODE
SLANG_MAKE_ERROR
SLANG_MAKE_SUCCESS
SLANG_MAKE_WIN_GENERAL_ERROR
SLANG_MAKE_CORE_ERROR
SLANG_COM_INTERFACE
SLANG_CLASS_GUID
SLANG_IID_PPV_ARGS
